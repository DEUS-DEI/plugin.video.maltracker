<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Cuentas y API">
        <setting id="mal_username" type="text" label="Usuario de MyAnimeList" default=""/>
        <setting id="anilist_username" type="text" label="Usuario de AniList (opcional)" default=""/>
        <setting id="client_id" type="text" label="MAL Client ID" default=""/>
        <setting id="client_secret" type="text" label="MAL Client Secret" default=""/>
        <setting id="import_api_config" type="action" label="Importar configuración API desde archivo" />
    </category>
    <category label="Integración con otros addons">
        <setting id="alfa_db_path" type="text" label="Ruta base de datos Alfa (vacío = estándar)" default=""/>
        <setting id="balandro_db_path" type="text" label="Ruta base de datos Balandro (vacío = estándar)" default=""/>
    </category>
    <category label="Sincronización y avanzado">
        <setting id="auto_sync" type="bool" label="Sincronizar automáticamente al reproducir" default="true"/>
        <setting id="sync_interval" type="number" label="Intervalo de sincronización (minutos)" default="60"/>
        <setting id="reset_settings" type="action" label="Restablecer configuración del addon" />
        <setting id="export_settings" type="action" label="Exportar configuración actual" />
        <setting id="import_settings" type="action" label="Importar configuración desde archivo" />
    </category>
</settings>
